<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SnapDesk.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SnapDesk.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="SnapDesk - Desktop Layout Manager"
        Width="1200" Height="800"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="150"/>
        </Grid.RowDefinitions>
        
        <!-- Header with buttons -->
        <Border Grid.Row="0" Background="#0078D4" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="SnapDesk - Desktop Layout Manager" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="10">
                    <Button x:Name="SaveCurrentLayoutButton"
                            Content="Save Current Layout"
                            Command="{Binding SaveCurrentLayoutCommand}"
                            Background="#28A745" 
                            Foreground="White" 
                            Padding="15,8"
                            FontWeight="SemiBold"/>
                    
                    <Button x:Name="RefreshButton"
                            Content="Refresh"
                            Command="{Binding RefreshLayoutsCommand}"
                            Background="#0078D4" 
                            Foreground="White" 
                            Padding="15,8"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main content area (Saved Layouts and Layout Details) -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="3*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Saved Layouts -->
            <Border Grid.Column="0" 
                    Background="#F8F9FA" 
                    CornerRadius="8" 
                    BorderBrush="#DEE2E6" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" MinHeight="150"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Panel Title -->
                    <TextBlock Grid.Row="0" 
                               Text="Saved Layouts" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="20,20,20,15"
                               Foreground="#495057"/>
                    
                    <!-- Layouts List -->
                    <ScrollViewer Grid.Row="1" 
                                  Margin="20,0,20,20"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SavedLayouts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            Margin="0,0,0,10" 
                                            Padding="15,12" 
                                            CornerRadius="6"
                                            BorderBrush="#E9ECEF" 
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Spacing="5">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="#212529"/>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat='Created: {0:dd-MM-yyyy HH:mm}'}" 
                                                           FontSize="12" 
                                                           Foreground="#6C757D"/>
                                            </StackPanel>
                                            
                                            <CheckBox Grid.Column="1" 
                                                      IsChecked="{Binding IsSelected}"
                                                      VerticalAlignment="Center"
                                                      Width="20" Height="20"
                                                      Foreground="#0078D4"
                                                      Background="White"
                                                      BorderBrush="#CED4DA"
                                                      BorderThickness="2"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Action Buttons -->
                    <Border Grid.Row="2" 
                            BorderBrush="#DEE2E6"
                            BorderThickness="1"
                            Margin="20,0,20,20"
                            Background="White"
                            CornerRadius="6">
                        <StackPanel Orientation="Vertical" 
                                   HorizontalAlignment="Center" 
                                   Spacing="10" 
                                   Margin="20,20"
                                   Background="Transparent">
                            
                            <!-- Help Text -->
                            <TextBlock Text="Select a layout above to enable these actions:" 
                                       HorizontalAlignment="Center"
                                       Foreground="#6C757D"
                                       FontSize="12"
                                       FontStyle="Italic"/>
                            
                            <!-- Buttons -->
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center" 
                                       Spacing="15">
                                <Button x:Name="RestoreButton"
                                        Content="Restore Selected"
                                        Command="{Binding RestoreLayoutCommand}"
                                        Background="#17A2B8" 
                                        Foreground="White" 
                                        Padding="15,10"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        MinWidth="140"
                                        MinHeight="40"
                                        CornerRadius="6"
                                        IsEnabled="{Binding CanRestoreLayout}"/>
                                
                                <Button x:Name="DeleteButton"
                                        Content="Delete Selected"
                                        Command="{Binding DeleteLayoutCommand}"
                                        Background="#DC3545" 
                                        Foreground="White" 
                                        Padding="15,10"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        MinWidth="140"
                                        MinHeight="40"
                                        CornerRadius="6"
                                        IsEnabled="{Binding CanDeleteLayout}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Right Panel: Layout Details -->
            <Border Grid.Column="2" 
                    Background="#F8F9FA" 
                    CornerRadius="8" 
                    BorderBrush="#DEE2E6" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Panel Title -->
                    <TextBlock Grid.Row="0" 
                               Text="Layout Details" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="20,20,20,15"
                               Foreground="#495057"/>
                    
                    <!-- Content Area -->
                    <Grid Grid.Row="1" Margin="20,0,20,20">
                        <TextBlock Text="Select a layout from the list to view details" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="#6C757D"
                                   FontSize="14"/>
                    </Grid>
                    
                    <!-- Selected Layout Info -->
                    <Border Grid.Row="2" 
                            Background="White" 
                            Margin="20,0,20,20" 
                            Padding="15,12" 
                            CornerRadius="6"
                            BorderBrush="#E9ECEF" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Selected Layout:" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,8"
                                       Foreground="#495057"/>
                            
                            <TextBox Grid.Row="1" 
                                     Text="{Binding SelectedLayoutName}" 
                                     IsReadOnly="True"
                                     Background="#F8F9FA"
                                     BorderBrush="#CED4DA"
                                     Padding="8,6"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Bottom status area -->
        <Border Grid.Row="2" 
                Background="#F8F9FA" 
                BorderBrush="#DEE2E6" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- System Status -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            Spacing="20" 
                            Margin="20,15">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Ellipse Width="8" Height="8" 
                                 Fill="{Binding DatabaseStatusColor}"/>
                        <TextBlock Text="{Binding DatabaseStatus}" 
                                   FontSize="12" 
                                   Foreground="#6C757D"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding DatabasePath}" 
                               FontSize="12" 
                               Foreground="#6C757D"/>
                </StackPanel>
                
                <!-- Layout Count -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding SavedLayouts.Count, StringFormat='Layouts: {0}'}" 
                           FontSize="12" 
                           Foreground="#6C757D"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
                
                <!-- Usage Instructions -->
                <TextBlock Grid.Column="2" 
                           Text="Use Save Current Layout to capture your desktop arrangement" 
                           FontSize="12" 
                           Foreground="#6C757D"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
            </Grid>
        </Border>
        
        <!-- Status bar at the very bottom -->
        <Border Grid.Row="2" 
                Background="#DC3545" 
                VerticalAlignment="Bottom" 
                Height="30">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="White" 
                       FontSize="12" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
